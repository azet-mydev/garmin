<layout id="Summary">
	<drawable id="blackBackground" />
	<label id="time" x="center" y="0.15*dc.getHeight()-0.5*dc.getFontHeight(Graphics.FONT_MEDIUM)" color="Graphics.COLOR_WHITE" justification="Graphics.TEXT_JUSTIFY_CENTER" font="Graphics.FONT_MEDIUM"/>
	<label id="counter" x="center" y="center" color="Graphics.COLOR_ORANGE" justification="Graphics.TEXT_JUSTIFY_CENTER" font="Graphics.FONT_NUMBER_HOT"/>
	<label id="hr" x="center" y="0.85*dc.getHeight()-dc.getFontHeight(Graphics.FONT_SMALL)" color="Graphics.COLOR_WHITE" justification="Graphics.TEXT_JUSTIFY_CENTER" font="Graphics.FONT_SMALL"/>
	<label id="calories" x="center" y="0.85*dc.getHeight()" color="Graphics.COLOR_WHITE" justification="Graphics.TEXT_JUSTIFY_CENTER" font="Graphics.FONT_SMALL"/>
</layout>